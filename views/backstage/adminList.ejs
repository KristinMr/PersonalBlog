


<!DOCTYPE html>
<html lang="zh-CN">

<%- include("./public/header.ejs")%>

<!-- 展示内容 -->
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <input>
            </div>
            <div class="col-md-2">
                <button class="btn btn-primary btn-lg" type="submit" value="查找"></button>
            </div>
            <div class="col-md-4">
                <select>
                    <option value="0">管理员用户</option>
                    <option value="1">普通用户</option>
                </select>
            </div>
            <div class="col-md-2">
                <button class="btn btn-lg btn-primary" type="submit" value="查找"></button>
            </div>
        </div>
        <form action="" method="post">
            <table class="table table-striped text-center">
                <thead>
                <tr>
                    <th class="text-center">用户ID</th>
                    <th class="text-center">昵称</th>
                    <th class="text-center">邮箱</th>
                    <th class="text-center">性别</th>
                    <th class="text-center">等级</th>
                    <th class="text-center">编辑</th>
                </tr>
                </thead>
                <% for (var i = 0; i < user.length; i++) {%>
                    <tr>
                        <td><%= user[i].user_id %></td>
                        <td><%= user[i].user_name %></td>
                        <td><%= user[i].user_email %></td>
                        <td><%= user[i].user_sex %></td>
                        <%if (user[i].user_rank == 2) { %>
                            <td>站长</td>
                        <% } else if (user[i].user_rank == 1)  { %>
                            <td>管理员用户</td>
                        <% } else {%>
                            <td>普通用户</td>
                        <% } %>
                        <td>
                            <a href="/admin/AdminEdit/<%= user[i].user_id%>">
                                <input class="btn btn-info btn-sm" type="button" value="修改"/>
                            </a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </form>


    </div>

</body>
</html>